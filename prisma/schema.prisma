// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // または 'sqlite', 'mysql' など、使用するDBに合わせて変更
  url      = env("DATABASE_URL")
}

model Booking {
  id        String   @id @default(uuid()) // 予約の一意なID
  date      DateTime // 予約日
  time      String   // 予約時間 (例: "10:00", "14:30" など)
  name      String   // 予約者名
  email     String   // 予約者メールアドレス
  createdAt DateTime @default(now()) // 予約作成日時
  updatedAt DateTime @updatedAt    // 予約更新日時
}